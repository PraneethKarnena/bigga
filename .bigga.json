    "language": "python",
    "name": "golden_sherpa",
    "desciption": "Reckonsys Golden Sherpa Deployment Configuration",
    "hosts": {
        "beta": [{
            "user": "root",
            "port": 22,
            "ip": "206.189.133.72",
